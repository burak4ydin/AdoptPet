        <!-- Main -->
        <div class="main" role="main">

            <!-- Page Heading -->
            <section class="page-heading">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <h1>PetSitters List</h1>
                        </div>
                        <div class="col-md-6">
                            <ul class="breadcrumb">
                                <li><a href="index.html">Home</a></li>
                                <li><a href="#">Pet Sitters</a></li>
                                <li class="active">PetSitters List</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Page Heading / End -->
            <!-- Page Content -->
            <section class="page-content">
                <div class="container">

                    <div class="job_listings">
                        <form class="job_filters" asp-controller="Adopt" asp-action="Index" method="post">

                            <div class="search_jobs">
                                <div class="search_keywords">
                                    <label for="search_keywords">Keywords</label>
                                    <input type="text" name="keyword" id="search_keywords" placeholder="Anahtar Kelime Gir" class="form-control" value="" />
                                </div>

                                

                                <div class="search_type">
                                    <label>Service</label>
                                    <span class="select-style">
                                        <select class="form-control" name="catId">
                                            <option value=99999 disabled selected>Kategoriler</option>
                                            @foreach (var i in categories)
                                            {
                                                <option value="@i.id" >@i.catName</option>
                                            }
                                        </select>
                                    </span>
                                </div>

                                <div class="search_submit">
                                    <label>Submit</label>
                                    <button class="btn btn-block btn-primary">Ara</button>
                                </div>
                            </div>
                        </form>

                        <ul class="job_listings">
                            @foreach (var i in pets)
                            {
                                <li class="job_listing">
                                    <a asp-controller="Adopt" asp-action="Info" asp-route-id="@i.id">
                                        <img src="@i.photoLink" alt="" class="company_logo">
                                        <div class="position">
                                            <h3>@i.name</h3>
                                            <div class="company">
                                                <strong>@categories.FirstOrDefault(u => u.id == i.catId).catName</strong>
                                            </div>
                                        </div>
                                        <div class="location">
                                            <i class="fa fa-map-marker"></i> @i.province
                                        </div>
                                        <ul class="meta">
                                            <li class="date">
                                                @users.FirstOrDefault(u => u.id == i.userId).name
                                            </li>
                                        </ul>
                                    </a>
                                </li>
                            }
                            
                        </ul>
                    </div>

                    <div class="spacer"></div>

                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            <a class="load_more_jobs btn btn-default" asp-controller="Pet" asp-action="Index">Ücretsiz İlan Ekle</a>
                        </div>
                    </div>

                </div>
            </section>
            <!-- Page Content / End -->
            
          

        </div>
        <!-- Main / End -->
    </div>





